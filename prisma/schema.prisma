generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ListingStatus {
  active
  deactive
}


model Listing {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @unique
  name          String
  description   String
  tag           String
  price         Int
  images        Image[]
  files         File[]
  status        ListingStatus @default(deactive)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Image {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  listingId     String    @db.ObjectId
  listing       Listing   @relation(fields: [listingId], references: [id])

  userId        String    @unique
  name          String
  imageUrl      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model File {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  listingId     String    @db.ObjectId
  listing       Listing   @relation(fields: [listingId], references: [id])

  userId        String    @unique
  name          String
  fileUrl       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}