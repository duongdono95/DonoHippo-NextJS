generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ListingStatus {
  active
  deactive
}


model ListingInterface {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @unique
  name          String
  description   String
  tag           String
  price         Int
  images        ImageInterface[]
  files         FileInterface[]
  status        ListingStatus @default(deactive)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ImageInterface {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  listingIds    String[]    @db.ObjectId
  listing       ListingInterface   @relation(fields: [listingIds], references: [id])
  userId        String    @unique
  name          String
  imageUrl      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model FileInterface {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  listingIds    String[]    @db.ObjectId
  listing       ListingInterface   @relation(fields: [listingIds], references: [id])
  userId        String    @unique
  name          String
  fileUrl       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}